@*@model dbtest2.Models.Login.UserModel*@

@{
    string msg = ViewData["msg"] as string;
}

<section class="login-block">
    <!-- Container-fluid starts -->
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <form id="form1" method="post" class="md-float-material form-material" action="/login/register">
                    <div class="text-center">
                        <img src="/Content/img/login/logo.png" alt="logo.png">
                    </div>
                    <div class="auth-box card">
                        <div class="card-block">
                            <div class="row m-b-20">
                                <div class="col-md-12">
                                    <h3 class="text-center txt-primary">Sign up</h3>
                                    @if (string.IsNullOrWhiteSpace(msg) == false)
                                    {
                                        <div class="alert alert-danger">@msg</div>
                                    }
                                </div>
                            </div>
                            <div class="form-group form-primary">
                                <label class="float-label">Username</label>
                                <input type="text" name="user_name" class="form-control" placeholder="Choose Username" required="required">
                                <span class="form-bar"></span>
                            </div>
                            <div class="form-group form-primary">
                                <label class="float-label">Email Address</label>
                                <input type="text" name="email" class="form-control" placeholder="Your Email Address" required="required">
                                <span class="form-bar"></span>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group form-primary">
                                        <label class="float-label">Password</label>
                                        <input type="password" name="password" class="form-control" placeholder="Password" required="required">
                                        <span class="form-bar"></span>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group form-primary">
                                        <label class="float-label">Confirm Password</label>
                                        <input type="password" name="password2" class="form-control" placeholder="Confirm Password" required="required">
                                        <span class="form-bar"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row m-t-30">
                                <div class="col-md-12">
                                    <button name="submit" type="submit" class="btn btn-primary btn-md btn-block waves-effect text-center m-b-20">Sign up now</button>
                                </div>
                            </div>
                            <hr />
                            <div class="row">
                                <div class="col-md-2">
                                    <img src="/Content/img/login/Logo-small-bottom.png" alt="small-logo.png">
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <!-- end of col-sm-12 -->
        </div>
        <!-- end of row -->
    </div>
    <!-- end of container-fluid -->
</section>
