@{
    string msg = ViewData["msg"] as string;
}

<head>
    <link href='//spoqa.github.io/spoqa-han-sans/css/SpoqaHanSansNeo.css' rel='stylesheet' type='text/css'>
    <style>
        h3.text-center {
            font-weight: bold;
        }

        div.card-block {
            margin-top: 30px;
            margin-bottom: 20px;
            margin-left: 50px;
            margin-right: 50px;
        }

        div.form-group.form-primary {
            margin-top: 20px;
        }

        label.float-label {
            margin-bottom: 5px;
        }

        div.row.m-t-30 {
            margin-top: 80px;
            float: right;
        }

        input.form-control {
            width: 400px;
            text-align: center;
        }

        #sform {
            display: inline-block;
        }

        body {
            text-align: center;
            font-family: 'Spoqa Han Sans Neo', 'sans-serif';
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row" id="sform">
            <div class="col-sm-12">
                <form class="md-float-material form-material" method="post" action="/home/TableDelete_Input">
                    <div class="auth-box card">
                        <div class="card-block">
                            <div class="row m-b-20">
                                <div class="col-md-12">
                                    <h3 class="text-center">출차 하기</h3>
                                    @if (string.IsNullOrWhiteSpace(msg) == false)
                                    {
                                        <div class="alert alert-danger">@msg</div>
                                    }
                                </div>
                            </div>
                            <div class="form-group form-primary">
                                <label class="float-label">차량 번호</label>
                                <input type="text" name="carnum" class="form-control" placeholder="Car Number" required="required">
                                <span class="form-bar"></span>
                            </div>
                            <div class="row m-t-30">
                                <div class="col-md-12">
                                    <button type="submit" class="btn btn-primary btn-md btn-block waves-effect waves-light text-center m-b-20">출차</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
